@using TeduShop.Web.Models;
@model ContactDetailViewModel

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@section headerExtension{
    <style type="text/css">
        #map{
            height: 450px;
        }
    </style>
}

@section footerJs{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAk3Eeu6MXm1Y6qil2hO6j89kckY5nnSTo"></script>
    <script src="/Assets/client/js/controller/contact.js"></script>
}

<div class="main">
    <div class="reservation_top">
        <div class="contact_right">
            <h3>THÔNG TIN LIÊN HỆ</h3>
            <address class="address">
                <p>@Model.Address</p>
                <dl>
                    <dt> </dt>
                    <dd>Điện thoại:<span> @Model.Phone</span></dd>
                    <dd>FAX: <span>+1 800 658 5784</span></dd>
                    <dd>E-mail:&nbsp; <a href="mailto:@(Model.Email)">@Model.Email</a></dd>
                </dl>
            </address>
            <div class="clearfix"></div>
            <div id="map"></div>
            <input type="hidden" id="hidAddress" value="@Model.Name<br/>Điện thoại: @Model.Phone<br/>Địa chỉ: @Model.Address" />
            <input type="hidden" id="hidLat" value="@Model.Latitude" />
            <input type="hidden" id="hidLng" value="@Model.Longitude" />
            <input type="hidden" id="hidName" value="@Model.Name" />
        </div>
    </div>

    <div class="reservation_top">
        <div class="contact_right">
            <h3>LIÊN HỆ VỚI CHÚNG TÔI</h3>
            <div class="contact-form">
                <form method="post" action="contact-post.html">
                    <input type="text" class="textbox" placeholder="Nhập họ tên...">
                    <input type="text" class="textbox" placeholder="Nhập email...">
                    <textarea placeholder="Nhập tin nhắn..."></textarea>
                    <input type="submit" value="Gửi">
                    <div class="clearfix"> </div>
                </form>
            </div>
        </div>
    </div>

</div>

