
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@section footerJs{
    <script src="/Assets/admin/libs/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/Assets/admin/libs/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="/Assets/client/js/controller/shoppingCart.js"></script>    
}

<div class="single_top">
    <div class="single_grid">
        <div id="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <td>Stt</td>
                        <td>Tên sản phẩm</td>
                        <td>Hình ảnh</td>
                        <td>Đơn giá</td>
                        <td>Số lượng</td>
                        <td>Thành tiền</td>
                        <td>#</td>
                    </tr>
                </thead>
                <tbody id="cartBody"></tbody>
            </table>
            
            <div class="pull-right">
                Tổng tiền: <span id="lblTotalOrder" style="font-weight: bold;"></span>
            </div>

            <button class="btn" id="btnContinue">Tiếp tục mua hàng</button>
            <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>
            <button class="btn btn-success" id="btnCheckOut">Thanh toán</button>
        </div>

        <div id="divCheckout" style="display:none;">
            <div class="reservation_top">
                <div class="contact_right">
                    <h3>Thanh toán</h3>
                    <div class="contact-form">
                        <form method="post" id="frmPayment">
                            @if (Request.IsAuthenticated)
                            {
                                <label>
                                    <input type="checkbox" id="chkUserLoginInfo" />
                                    Sử dụng thông tin đăng nhập
                                </label>
                            }
                            <input type="text" class="textbox" id="txtName" name="name" placeholder="Họ tên">
                            <input type="text" class="textbox" id="txtAddress" name="address" placeholder="Địa chỉ">
                            <input type="text" class="textbox" id="txtEmail" name="email" placeholder="Email">
                            <input type="text" class="textbox" id="txtPhone" name="phone" placeholder="Điện thoại">
                            <textarea value="" id="txtMessage" placeholder="Ghi chú"></textarea>
                            <div class="text-right">
                                <input type="button" id="btnCreateOrder" class="btn btn-success" value="Hoàn tất">
                            </div>
                            <div class="clearfix"> </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"> </div>
    </div>
</div>

<script id="tplCart" type="x-tmpl-mustache">
    <tr>
        <td>{{Index}}</td>
        <td>{{ProductName}}</td>
        <td><img src="{{Image}}" width="100" /></td>
        <td>{{PriceF}}</td>
        <td><input type="number" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="input txtQuantity" style="width: 50px;" /></td>
        <td id="amount_{{ProductId}}">{{Amount}}</td>
        <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-close"></i></button></td>
    </tr>
</script>

